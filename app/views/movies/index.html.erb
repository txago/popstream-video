<!-- page container -->
<div class="container-fluid mb-4">
  <!-- page title -->
  <div class="row d-flex justify-content-center my-4">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8 text-center">
      <h1 class="title">Filmes</h1>
      <%= link_to "Adicionar um novo filme", new_movie_path, class: "btn btn-primary my-2" %>
    </div>
  </div>
  <!-- card grid -->
  <div class="row justify-content-center">
    <!-- single card loop -->
    <% @movies.each do |movie| %>
    <div class="col-6 col-sm-6 col-md-3 col-lg-2">
      <%= render 'shared/movie_card', movie: movie %>
    </div>
    <% end %>
    <!-- end single card loop -->
  </div>
  <!-- end card grid -->
</div>
<!-- end container -->
