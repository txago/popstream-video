<!-- page container -->
<div class="container-fluid mb-4">
  <!-- page title -->
  <div class="row d-flex justify-content-center my-4">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8 text-center">
      <h1 class="title">GÃªneros</h1>
    </div>
  </div>
  <!-- card grid -->
  <div class="row justify-content-center">
    <!-- single card loop -->
    <% @genres.each do |genre| %>
    <div class="col-6 col-sm-6 col-md-3 col-lg-2">
      <div class="card-director mb-4">
        <div class="card-info">
          <h2 class="title"><%= genre.name %></h2>
        </div>
        <!-- director movies loop -->
        <% if genre.movies.length > 1 %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-uppercase subtitle"><%= genre.movies.length %> filmes</li>
            <% genre.movies.each do |movie| %>
            <li class="list-group-item"><%= link_to movie.name, movie_path(movie) %></li>
            <% end %>
          </ul>
        <% elsif genre.movies.length == 1 %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-uppercase subtitle"><%= genre.movies.length %> filme</li>
            <% genre.movies.each do |movie| %>
            <li class="list-group-item"><%= link_to movie.name, movie_path(movie) %></li>
            <% end %>
          </ul>
        <% else %>
          <div class="card-info">
            <p>Sem filmes ainda.</p>
          </div>
        <% end %>
        <!-- end director movies loop -->
      </div>
    </div>
    <% end %>
    <!-- end single card loop -->
  </div>
  <!-- end card grid -->
</div>
<!-- end container -->
