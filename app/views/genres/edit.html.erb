<!-- page container -->
<div class="container mb-4">
  <!-- page title -->
  <div class="row d-flex justify-content-center my-4">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8 text-center">
      <h1 class="title">Editar <%= @genre.name %></h1>
    </div>
  </div>
  <!-- form container -->
  <div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
      <%= render 'form', genre: @genre %>
      <%= link_to 'Voltar para lista', genres_path, class: 'my-4 btn btn-primary' %>
      <%= link_to genre_path(@genre), method: :delete, data: { confirm: "Tem certeza que deseja remover?" }, class: 'btn btn-warning' do %>Remover <i class="far fa-trash-alt"></i><% end %>
    <div class="col-6 col-sm-6 col-md-3 col-lg-2">
  </div>
  <!-- end list container -->
</div>
<!-- end container -->
