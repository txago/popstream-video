<!-- page container -->
<div class="container mb-4">
  <!-- page title -->
  <div class="row d-flex justify-content-center my-4">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8 text-center">
      <h1>Edit Genres</h1>
      <%= link_to "Add new genre", new_genre_path, class: "btn btn-primary" %>
    </div>
  </div>
  <!-- list container -->
  <div class="row justify-content-center">
    <div class="col-6 col-sm-6 col-md-3 col-lg-6">
      <ul class="list-group list-group-flush">
        <% @genres.each do |genre| %>
        <li class="list-group-item d-flex justify-content-between align-items-center rounded text-dark">
          <%= genre.name %>
          <span class="text-uppercase badge badge-primary"><%= genre.movies.length %> movies</span>
        </li>
        <% end %>
      </ul>
    <div class="col-6 col-sm-6 col-md-3 col-lg-2">
  </div>
  <!-- end list container -->
</div>
<!-- end container -->
